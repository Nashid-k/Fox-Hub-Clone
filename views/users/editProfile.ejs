<%- include('../layouts/header.ejs') %>
<%- include('../layouts/navbar.ejs') %>

<link rel="stylesheet" href="/css/sidebar.css">

<div class="hero-wrap hero-bread" style="background-image: url('/assets/images/bg_6.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="/home">Home</a></span> <span>Profile</span>
                </p>
                <h1 class="mb-0 bread">My PROFILE</h1>
            </div>
        </div>
    </div>
</div>

<div class="container my-5 d-flex justify-content-center align-items-center" style="min-height: 20vh;">
    <div class="row w-100">
        <div class="col-md-3"></div>

        <style>
            .content {
                margin-top: -1%;
    margin-left: auto;
    margin-right: auto;
    width: 84%;
    padding: 80px;

            }
            .add-address-btn {
    position: absolute;
    bottom: -280px;
    right: 130px;
    margin-bottom: 140px;
    margin-right: 230px;
    border-radius: 3%;
}
        </style>

        <div class="content">
            <div>
                <form action="/updateProfile/<%= user._id%>" method="POST">
                    <div class="col-mb-3">
                        <label for="inputName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="inputName" name="name" value="<%= user.name %>">
                    </div>

                    <div class="col-mb-3">
                        <label for="inputEmail4" class="form-label">Email</label>
                        <input type="email" class="form-control" id="inputEmail4" name="email" value="<%= user.email %>">
                    </div>
                    <div class="col-mb-3">
                        <label for="inputmobile" class="form-label">Mobile</label>
                        <input type="text" class="form-control" id="inputmobile" name="mobile" value="<%= user.mobile %>">
                    </div>

                    <div>
                        <button type="submit" class="btn btn-success add-address-btn">Update Profile</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer.ejs') %>
