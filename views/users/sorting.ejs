<% products.forEach(function(product) { %>
    <div class="col-sm-12 col-md-12 col-lg-4 ftco-animate d-flex">
      <div class="product d-flex flex-column">
        <a href="#" class="img-prod">
          <img class="img-fluid" src="/productImage/<%= product.image %>" alt="<%= product.name %>">
          <div class="overlay"></div>
        </a>
        <div class="text py-3 pb-4 px-3">
          <div class="d-flex">
            <div class="cat">
              <span><%= product.category.name %></span>
            </div>
            <div class="rating">
              <p class="text-right mb-0">
                <% for (var i = 0; i < 5; i++) { %>
                  <% if (i < product.rating) { %>
                  <% } else { %>
                  <% } %>
                <% } %>
              </p>
            </div>
          </div>
          <h3><a href="#"><%= product.name %></a></h3>
          <div class="pricing">
            <p class="price"><span>$<%= product.price %></span></p>
            <p>
              <% if (product.quantity === 0) { %>
                <span class="quantity-box" style="color: rgb(255, 0, 0);">
                  Out of Stock
                </span>
              <% } else { %>
                <span class="quantity-box">
                  <%= product.quantity %> piece<%= product.quantity > 1 ? 's' : '' %> available
                </span>
              <% } %>
            </p>
          </div>
          <p class="bottom-area d-flex px-3">
            <a href="#" class="buy-now text-center py-2">Wishlist<span><i class="ion-ios-heart ml-1"></i></span></a>
          </p>
          <form action="/add-to-cart" method="post">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <input type="hidden" name="productName" value="<%= product.name %>">
            <input type="hidden" name="productPrice" value="<%= product.price %>">
            <input type="hidden" name="productImage" value="<%= product.image %>">
            <input type="submit" class="btn btn-success btn-sm" value="Add to Cart" <%= product.quantity === 0 ? 'disabled' : '' %>>
          </form>
        </div>
      </div>
    </div>
  <% }); %>
  